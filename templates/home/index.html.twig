{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<link rel="stylesheet" href="{{ asset('assets/css/home.css') }}">

<main class="body">
    {% include '/_partials/header.html.twig' %}

    <div class="container my-5">
        <div class="container-actuality">
            <h1 class="text-center">Actualit√©s</h1>
            <div class="">
                <div class="row">
                    {% for item in articles %}
                    <div class="card-item col-12 col-sm-12 col-md-6 col-lg-4">
                        <div class="card ">
                            <img src="{{ asset('uploads/images/' ~ item.image) }}" class="card-img-top"
                                alt="{{ item.article.title }}" />
                            <div class="card-body">
                                <h5 class="card-title">{{ item.article.title }}</h5>
                                <p class="card-text">{{ item.article.content|slice(0, 225) }}...</p>

                                <div class="button">
                                    <a href="#" class="btn ">Lire la suite</a>
                                </div>

                            </div>
                        </div>
                    </div>
                    {% else %}
                    <p>Aucun article en avant pour le moment.</p>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

    {% include '/_partials/footer.html.twig' %}
</main>
{% endblock %}